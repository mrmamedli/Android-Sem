<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Lab4" parent="Theme.Material3.DynamicColors.Light">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#08ccb6</item>
        <item name="colorPrimaryVariant">@color/teal_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@drawable/background_gradient</item>
        <item name="android:textColor">#cd0827</item>
        <item name="android:fontFamily">@font/lobster_regular</item>
        <item name="android:textSize">40sp</item>
        <item name="android:letterSpacing">0.2</item>
    </style>
    <style name="style1" parent="@android:style/TextAppearance">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">30sp</item>
    </style>
    <style name="firstButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="strokeWidth">1dp</item>
        <item name="shapeAppearanceOverlay">@style/firstButtonCorners</item>
    </style>
    <style name="secondButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="strokeWidth">1dp</item>
        <item name="shapeAppearanceOverlay">@style/secondButtonCorners</item>
    </style>
    <style name="firstButtonCorners" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerFamilyTopRight">cut</item>
        <item name="cornerFamilyBottomRight">cut</item>
        <item name="cornerSizeTopLeft">32dp</item>
        <item name="cornerSizeBottomLeft">32dp</item>
    </style>
    <style name="secondButtonCorners" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">32dp</item>
        <item name="cornerSizeBottomRight">32dp</item>
        <item name="cornerFamilyTopLeft">cut</item>
        <item name="cornerFamilyBottomLeft">cut</item>
    </style>
</resources>